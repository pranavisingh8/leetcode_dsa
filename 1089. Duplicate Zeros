## 1089. Duplicate Zeros


class Solution {
public:
    void duplicateZeros(vector<int>& arr) {
        int n=arr.size();
        int i=-1, c=0;
        while(c<n){
            i++;
            c +=(arr[i]==0)? 2:1;
        }
        int j=n-1;
        if(c==n+1){
            arr[j--]= 0;
            --i;
        }
        while(j>=0){
            arr[j--]=arr[i];
            if(arr[i]==0){
                arr[j--]=arr[i];
            }
            --i;
        }
    }
};
